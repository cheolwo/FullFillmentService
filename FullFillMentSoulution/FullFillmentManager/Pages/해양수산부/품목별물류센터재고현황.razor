@page "/품목별물류센터재고현황Page"
@using 수협FrontCommon.ViewModel.Sample;
@inject 품목별물류센터재고현황ViewModel _품목별물류센터재고현황ViewModel
<MudText Align="Align.Center" Typo="Typo.h2">품목별물류센터재고현황</MudText>
@foreach (var item in _품목별물류센터재고현황ViewModel.Items)
{
    <MudCard Outlined="true">
        <MudCardMedia Image="/images/창고.png" Height="300" />
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">@item.MprcStdCode</MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.body2">품목별물류센터재고현황코드 : @item.MprcStdCode</MudText>
@*            <MudText Typo="Typo.body2">팩스번호 : @item.FxNum</MudText>
            <MudText Typo="Typo.body2">전화번호 : @item.TelNo</MudText>*@
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary">Read More</MudButton>
        </MudCardActions>
    </MudCard>
}
@code {
    protected override async Task OnInitializedAsync()
    {
        await _품목별물류센터재고현황ViewModel.Load품목별물류센터재고현황정보();
    }
}
