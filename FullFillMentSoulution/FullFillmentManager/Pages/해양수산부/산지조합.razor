@page "/산지조합Page"
@using KoreaCommon.ViewModel;
@using KoreaCommon.ViewModel.해양수산부;
@inject 산지조합ViewModel _산지조합ViewModel
<MudText Align="Align.Center" Typo="Typo.h2">산지조합</MudText>
<MudGrid Justify="Justify.SpaceBetween">
@foreach (var item in _산지조합ViewModel.Items)
{
    <MudItem xs="12" sm="6" md="4" lg="3">
    <MudCard Outlined="true">
        <MudCardMedia Image="/images/dcinside.png" Height="300" />
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">@item.MxtrNm</MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.body2">산지조합코드 : @item.MxtrCode</MudText>
            <MudText Typo="Typo.body2">팩스번호 : @item.FxNum</MudText>
            <MudText Typo="Typo.body2">전화번호 : @item.TelNo</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary">Read More</MudButton>
        </MudCardActions>
    </MudCard>
    </MudItem>
}
</MudGrid>
@code {
    protected override async Task OnInitializedAsync()
    {
        await _산지조합ViewModel.Load산지조합정보();
    }
}
